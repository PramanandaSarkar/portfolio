---
import { DiGithubBadge } from 'react-icons/di';
import { IoLogoLinkedin } from 'react-icons/io';
import { FaPhoneAlt } from 'react-icons/fa';
import { MdEmail } from 'react-icons/md';
---

<section id="contact" class="h-screen bg-gray-900 text-white flex flex-col justify-center items-center py-12">
  <div class="container mx-auto flex flex-col lg:flex-row items-center justify-between space-y-12 lg:space-y-0">
    <!-- Contact Info -->
    <div class="w-full lg:w-1/3 text-center flex flex-col items-center lg:text-left px-6">
        <h2 class="text-4xl font-bold mb-6">Contact Me</h2>
        <ul class="space-y-6">
          <li class="flex items-center justify-center lg:justify-start">
            <a href="https://github.com/yourusername" class="text-lg flex items-center space-x-2 hover:text-teal-400">
              <DiGithubBadge size={24} />
              <span>GitHub</span>
            </a>
          </li>
          <li class="flex items-center justify-center lg:justify-start">
            <a href="https://www.linkedin.com/in/yourlinkedin" class="text-lg flex items-center space-x-2 hover:text-teal-400">
              <IoLogoLinkedin size={24} />
              <span>LinkedIn</span>
            </a>
          </li>
          <li class="flex items-center justify-center lg:justify-start">
            <a href="tel:+1234567890" class="text-lg flex items-center space-x-2 hover:text-teal-400">
              <FaPhoneAlt size={24} />
              <span>Phone: +1 234 567 890</span>
            </a>
          </li>
          <li class="flex items-center justify-center lg:justify-start">
            <a href="mailto:your@email.com" class="text-lg flex items-center space-x-2 hover:text-teal-400">
              <MdEmail size={24} />
              <span>Email: your@email.com</span>
            </a>
          </li>
        </ul>
      </div>

    <!-- Contact Form -->
    <div class="w-full lg:w-2/3 px-6">
        <form class="bg-gray-800 p-8 rounded-lg shadow-lg max-w-lg mx-auto space-y-6">
          <input type="text" placeholder="Name" class="w-full p-4 border border-gray-300 rounded bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500" />
          <input type="email" placeholder="Email" class="w-full p-4 border border-gray-300 rounded bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500" />
          <textarea placeholder="Message" class="w-full p-4 border border-gray-300 rounded bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500"></textarea>
          <button type="submit" class="w-full bg-teal-600 hover:bg-teal-500 text-white py-3 rounded-lg font-semibold focus:outline-none focus:ring-2 focus:ring-teal-500">Send Message</button>
        </form>
      </div>
  </div>
</section>
