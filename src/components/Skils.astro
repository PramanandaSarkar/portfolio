---

import { FaPython, FaJs, FaDatabase, FaRobot } from 'react-icons/fa';
---
<section id="skills" class="h-screen bg-white text-primary flex flex-col justify-center">
  <div class="container mx-auto">
    <h2 class="text-4xl font-bold mb-10 text-center">Skills</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <div class="text-center">
        <FaPython class="text-6xl text-secondary mx-auto mb-4" />
        <p>Python</p>
      </div>
      <div class="text-center">
        <FaJs class="text-6xl text-secondary mx-auto mb-4" />
        <p>JavaScript</p>
      </div>
      <div class="text-center">
        <FaRobot class="text-6xl text-secondary mx-auto mb-4" />
        <p>Machine Learning</p>
      </div>
      <div class="text-center">
        <FaDatabase class="text-6xl text-secondary mx-auto mb-4" />
        <p>Databases</p>
      </div>
    </div>
  </div>
</section>