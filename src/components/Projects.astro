<section id="projects" class="bg-gray-800 text-gray-100 py-12 min-h-screen">
    <div class="container mx-auto px-6 md:px-12 lg:px-20">
        <h2 class="text-center text-4xl font-bold text-gray-100 mb-12">
            Projects
        </h2>

        <!-- Machine Learning Projects -->
        <div class="mb-12">
            <h3 class="text-2xl font-semibold text-gray-200 mb-6">
                Machine Learning Projects
            </h3>
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {ml_projects.map((project) => (
                    <div class="bg-gray-900 rounded-lg shadow-lg p-6">
                        <h4 class="text-xl font-semibold text-gray-200 mb-2">{project.title}</h4>
                        <img src={project.image} alt={project.title} class="w-full h-48 object-cover rounded-lg mb-4" />
                        <p class="text-gray-300 mb-4">{project.description}</p>
                        <div class="flex space-x-2 flex-wrap">
                            {project.tools.map((tool) => (
                                <span class="bg-gray-700 text-gray-200 px-3 py-1 rounded-full text-sm mb-2">
                                    {tool}
                                </span>
                            ))}
                        </div>
                        <a href={project.link} class="text-blue-400 hover:underline mt-4 block">View Project</a>
                    </div>
                ))}
            </div>
        </div>

        <!-- Web Projects -->
        <div class="mb-12">
            <h3 class="text-2xl font-semibold text-gray-200 mb-6">
                Web Projects
            </h3>
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {web_projects.map((project) => (
                    <div class="bg-gray-900 rounded-lg shadow-lg p-6">
                        <h4 class="text-xl font-semibold text-gray-200 mb-2">{project.title}</h4>
