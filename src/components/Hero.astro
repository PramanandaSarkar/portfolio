  <!-- Dark/Light Mode Toggle -->
  <button
    id="theme-toggle"
    class="absolute top-6 right-6 p-3 bg-gray-200 dark:bg-gray-800 rounded-full shadow-md transition-all duration-300">
    <svg id="theme-icon" class="w-6 h-6 text-gray-800 dark:text-gray-200" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path id="light-icon" class="hidden" d="M12 3v2m4.22-1.22l-1.42 1.42M21 12h-2m-1.22 4.22l-1.42-1.42M12 21v-2m-4.22 1.22l1.42-1.42M3 12h2m1.22-4.22l1.42 1.42M12 3a9 9 0 100 18 9 9 0 000-18z"></path>
      <path id="dark-icon" d="M21.64 13A9 9 0 1112 3.36 7 7 0 1021.64 13z"></path>
    </svg>
  </button>
</div>

<!-- Animations -->
<style>
  @keyframes fade-in {
    0% {
      opacity: 0;
      transform: translateY(15px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in {
    0% {
      opacity: 0;
      transform: translateX(-15px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fade-in {
    animation: fade-in 2s ease-out forwards;
  }

  .animate-slide-in {
    animation: slide-in 2.2s ease-out forwards;
  }

  .animate-image-bounce {
    animation: bounce 3s infinite ease-in-out;
  }
</style>

<!-- Dark/Light Mode Script -->
<script>
  const themeToggle = document.getElementById('theme-toggle')!;
  const html = document.documentElement;

  themeToggle.addEventListener('click', () => {
    if (html.classList.contains('dark')) {
      html.classList.remove('dark');
      localStorage.setItem('theme', 'light');
    } else {
      html.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    }
  });

  // Persist theme on page reload
  if (localStorage.getItem('theme') === 'dark') {
    html.classList.add('dark');
  }
</script>
