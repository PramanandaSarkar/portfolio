---
const languages = [
  "Python",
  "Java",
  "JavaScript",
  "TypeScript",
  "C",
  "C++",
  "Rust",
];

const frameworks = [
  "Node.js",
  "Express.js",
  "FastAPI",
  "Django",
  "Flask",
  "Next.js",
  "React",
];

const ml = [
  "TensorFlow",
  "PyTorch",
  "Keras",
  "OpenCV",
  "Scikit-learn",
  "NumPy",
  "Matplotlib",
];
---

<section id="skills" class="bg-gray-900 text-gray-100 py-12 min-h-screen">
  <div class="container mx-auto px-6 md:px-12 lg:px-20">
    <h2 class="text-center text-4xl font-bold text-gray-100 mb-12">
      Skills & Expertise
    </h2>
    <div class="grid md:grid-cols-2 gap-10">
      <!-- Languages -->
      <div>
        <h3 class="text-2xl font-semibold text-gray-200 mb-6">
          Backend Development and Software Development
        </h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
          {languages.map((lang) => (
            <div class="p-4 bg-gray-800 rounded-lg shadow-md hover:scale-105 transition-all duration-300">
              <span class="text-lg font-medium">{lang}</span>
            </div>
          ))}
        </div>
      </div>
      <!-- Backend Development -->
      <div>
        <h3 class="text-2xl font-semibold text-gray-200 mb-6">
          Backend Development and Software Development
        </h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
          {frameworks.map((lang) => (
            <div class="p-4 bg-gray-800 rounded-lg shadow-md hover:scale-105 transition-all duration-300">
              <span class="text-lg font-medium">{lang}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Machine Learning -->
      <div>
        <h3 class="text-2xl font-semibold text-gray-200 mb-6">
          Machine Learning and Artificial Intelligence
        </h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
          {ml.map((tool) => (
            <div class="p-4 bg-gray-800 rounded-lg shadow-md hover:scale-105 transition-all duration-300">  
              <span class="text-lg font-medium">{tool}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
